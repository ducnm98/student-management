<form action="/profile" method="POST">
  <div class="form-body">
    <h3 class="card-title m-t-15">Person Info</h3>
    <hr>
    <div class="row p-t-20">
      <div class="col-md-6">
        <div class="form-group">
          <label class="control-label">Họ và tên đệm</label>
          <input type="text" id="firstName" class="form-control" placeholder="<%- profile.firstName %>" value="<%- profile.firstName %>" readonly>
        </div>
      </div>
      <!--/span-->
      <div class="col-md-6">
        <div class="form-group has-danger">
          <label class="control-label">Tên</label>
          <input type="text" id="lastName" class="form-control form-control-danger" placeholder="<%- profile.lastName %>" value="<%- profile.lastName %>" readonly>
        </div>
      </div>
      <!--/span-->
    </div>
    <!--/row-->
    <div class="row">
      <div class="col-md-6">
        <div class="form-group has-success">
          <label class="control-label">Gender</label>
          <% if(profile.gender == 1) { %>
            <select class="form-control custom-select">
              <option value="male" selected>Nam</option>
              <option value="female">Nữ</option>
            </select>
          <% } else { %>
            <select class="form-control custom-select">
              <option value="male" selected>Nam</option>
              <option value="female">Nữ</option>
            </select>
          <% } %>
        </div>
      </div>
      <!--/span-->
      <div class="col-md-6">
        <div class="form-group">
          <label class="control-label">Ngày tháng năm sinh</label>
          <input class="form-control" placeholder="<%- profile.dateOfBirth %>" value="<%- profile.dateOfBirth %>" readonly>
        </div>
      </div>
      <!--/span-->
    </div>
    <!--/row-->
    <div class="row">
      <div class="col-md-12 ">
        <div class="form-group">
          <label>Địa chỉ</label>
          <input type="text" class="form-control" placeholder="<%- profile.address %>" value="<%- profile.address %>" readonly>
        </div>
      </div>
    </div>
    <!--/row-->
    <div class="row p-t-20">
      <div class="col-md-6">
        <div class="form-group">
          <label class="control-label">Năm học</label>
          <input type="text" id="academicYear" class="form-control" placeholder="<%- profile.academicYear %>" value="<%- profile.academicYear %>" readonly>
        </div>
      </div>
      <!--/span-->
      <div class="col-md-6">
        <div class="form-group has-danger">
          <label class="control-label">Số điện thoại cá nhân</label>
          <input type="text" id="telephone" class="form-control form-control-danger" placeholder="<%- profile.telephone %>" value="<%- profile.telephone %>">
        </div>
      </div>
      <!--/span-->
    </div>
    <!--/row-->
    <h3 class="card-title m-t-15">Thông tin phụ huynh</h3>
    <hr>
    <div class="row p-t-20">
      <div class="col-md-6">
        <div class="form-group">
          <label class="control-label">Họ tên phụ huynh</label>
          <input type="text" id="parentalName" class="form-control" placeholder="<%- profile.parentalName %>" readonly>
        </div>
      </div>
      <!--/span-->
      <div class="col-md-6">
        <div class="form-group has-danger">
          <label class="control-label"> Số điện thoại phụ huynh</label>
          <input type="text" id="parentalTelephone" class="form-control form-control-danger" placeholder="<%- profile.parentalTelephone %>" readonly>
        </div>
      </div>
      <!--/span-->
    </div>
    <!--/row-->
  </div>
  <div class="form-actions">
    <button type="submit" class="btn btn-success">
      <i class="fa fa-check"></i> Lưu thông tin</button>
    <button type="button" class="btn btn-inverse">Cancel</button>
  </div>
</form>